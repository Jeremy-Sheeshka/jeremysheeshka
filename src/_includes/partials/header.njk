<header class="wrapper {{ headerClass }}" {% if headerStyle %}style="{{ headerStyle }}"{% endif %}>
  <a href="#main" class="skip-link">{{ translations[page.lang].a11y.skipMain }}</a>

  <div class="repel ontop gutter-s row-1">
    <a href="/{{ page.lang }}/" class="logo | cluster" {{ indicateActive }}>
      <div id="name" class="homemade-apple-regular">
        {% set name = "Jeremy Sheeshka" %}
        {% for char in name | split('') %}
          {% if char == " " %}
            <span>&nbsp;</span>
          {% else %}
            <span style="animation-delay: {{ 5000 + loop.index0 * 100 }}ms">{{ char }}</span>
          {% endif %}
        {% endfor %}
      </div>
    </a>
    {% include "partials/main-nav.njk" %}
  </div>

  <style>
    .homemade-apple-regular {
      font-family: "Homemade Apple", cursive;
      font-weight: bold;
      font-style: normal;
      font-size: 150%;
      letter-spacing: -0.2rem;
    }
    
    #name span {
    animation: highlight 160s linear;
    display: inline-block;
    }
    

html[data-theme="dark"] #name span {
  animation-name: highlight-subdued;
}

/* Light theme vibrant colors - starts and ends with black */
@keyframes highlight {
  0%     { color: #000000; }
  14.28% { color: #E54848; }
  28.56% { color: #3BBE58; }
  42.84% { color: #4862E5; }
  57.12% { color: #F5CF38; }
  71.4%  { color: #E54867; }
  85.68% { color: #60B978; }
  100%   { color: #000000; }
}

/* Dark theme subdued colors - starts and ends with white */
@keyframes highlight-subdued {
  0%     { color: #ffffff; }
  14.28% { color: #C76C6C; }
  28.56% { color: #78C992; }
  42.84% { color: #7F8DE0; }
  57.12% { color: #E6D36F; }
  71.4%  { color: #D97085; }
  85.68% { color: #93C4A4; }
  100%   { color: #ffffff; }
}

  </style>

  <div class="settings | full cluster gutter-s row-1 justify-self-end ontop">
    {% include "partials/switch-theme.njk" %}
  </div>
</header>

{% js "defer" %}
  {% include "scripts/sounds.js" %}
{% endjs %}
